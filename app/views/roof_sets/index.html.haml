%h1
  Roof sets

%table
  %thead
    %tr
      %th Name
      %th Description
      %th

  %tbody
    - @roof_sets.each do |roof_set|
      %tr
        %td= link_to roof_set.name, roof_set
        %td= roof_set.description
        %td= link_to 'Edit', edit_roof_set_path(roof_set)
        %td= link_to 'Destroy', roof_set, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Roof set', new_roof_set_path
